<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    android:visibility="visible">

    <TextView
        android:id="@+id/sof_task_nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sensei_medium"
        android:text="Name"
        android:textSize="34dp"
        app:layout_constraintBottom_toTopOf="@+id/sof_task_progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287" />


    <ProgressBar
        android:id="@+id/sof_task_progressBar"
        style="@style/SuccessCircularDeterminateProgressBar"
        android:layout_width="344dp"
        android:layout_height="301dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="@+id/sof_task_finishBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313"
        tools:progress="100" />

    <TextView
        android:id="@+id/sof_task_breakTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sensei_medium"
        android:text="You have successfully completed the task"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/sof_task_finishBT"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sof_task_progressBar"
        app:layout_constraintVertical_bias="0.419" />

    <Button
        android:id="@+id/sof_task_finishBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/cutom_new_button"
        android:fontFamily="@font/raleway_medium"
        android:text="Done"
        android:textColor="@color/secondColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

    <TextView
        android:id="@+id/sof_task_timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"
        android:text="Congratulations"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/sof_task_progressBar"
        app:layout_constraintEnd_toEndOf="@+id/sof_task_progressBar"
        app:layout_constraintStart_toStartOf="@+id/sof_task_progressBar"
        app:layout_constraintTop_toTopOf="@+id/sof_task_progressBar" />


</androidx.constraintlayout.widget.ConstraintLayout>